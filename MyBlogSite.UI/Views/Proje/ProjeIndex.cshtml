@using MyBlogSite.DLL.Tablolar
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Projeler</h2>
                <ol>
                    <li><a href="/Anasayfa/AnasayfaIndex">Home</a></li>
                    <li>Projeler</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">Tüm</li>

                        @foreach (var item in (List<MyBlogSite.DLL.SiteDatabase.Tablolar.Sp_ProjeListesiDOM>)TempData["projeList"])
                        {
                            <li data-filter=".filter-@item.KategoriAdi">@item.KategoriAdi</li>

                        }

                        <li data-filter=".filter-web">Web</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container">
                <div class="row">
                    <div class="col-lg-12">

                        @foreach (var item in (List<MyBlogSite.DLL.SiteDatabase.Tablolar.Sp_ProjeListesiDOM>)TempData["projeList"])
                        {
                            <div class="col-lg-4 col-md-6 portfolio-item filter-@item.KategoriAdi">
                                <div class="portfolio-wrap">
                                    <img src="~/Template/assets/img/portfolio/portfolio-1.jpg" class="img-fluid" alt="">
                                    <div class="portfolio-info">
                                        <h4>@item.ProjeAdi</h4>
                                        <p>@item.ProjeSahibiAdSoyad</p>
                                        <p>@item.KategoriAdi</p>
                                        <div class="portfolio-links">
                                            <a href="@item.ProjeLinki" class="portfolio-details" data-glightbox="type: external" title="Proje Linki"><i class="bx bx-link"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

    </section><!-- End Portfolio Section -->

</main><!-- End #main -->
