@using MyBlogSite.DLL.Tablolar
@model MyBlogSite.DLL.Tablolar.Kullanicilar
@{
    ViewBag.Title = "HakkimdaIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>About</h2>
                <ol>
                    <li><a href="/Anasayfa/AnasayfaIndex">Home</a></li>
                    <li>Hakkımda</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="row content">
                <div class="col-lg-6">
                    <h2>@Model.Adi @Model.Soyadi</h2>
                    <h3>@Model.meslek</h3>
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0">
                    <p>
                        @Model.KisacaHakkinda
                    </p>

                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Team Section ======= -->
    <section id="team" class="team section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Team</h2>
                <p>Ekip Arkadaşlarım</p>
            </div>

            <div class="row">

                @foreach (var item in ViewBag.Kullanicilar)
                {
                    <div class="col-lg-6 mt-4">
                        <div class="member d-flex align-items-start">
                            <div class="pic"><img src="~/Template/assets/img/team/team-4.jpg" class="img-fluid" alt=""></div>
                            <div class="member-info">
                                <h4>@item.Adi @item.Soyadi</h4>
                                <span>@item.meslek</span>
                                <p>@item.KisacaHakkinda</p>
                                <div class="social-links">
                                    <a href="https://twitter.com/@item.twitter" class="twitter"><i class="bx bxl-twitter"></i></a>
                                    <a href="https://github.com/@item.linkedln" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                                    <a href="https://www.linkedin.com/in/@item.github" class="bi-github"><i class="bx bxl-github"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section><!-- End Team Section -->

</main><!-- End #main -->
