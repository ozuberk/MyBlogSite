@using MyBlogSite.DLL.SiteDatabase.Tablolar
@model List<Sp_YorumListesiDOM>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    @*<a href="#" class="btn btn-success">Yeni Yorum Ekle</a>*@
                </h1>
            </div>
            <div class="col-sm-6">

                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Yorumlar</a></li>
                    <li class="breadcrumb-item active">Yorumlar Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body ">

                        <table class="table table-bordered">
                            <tr>
                                <th>Yorum ID</th>
                                <th>Yorum</th>
                                <th>Yorum Tarihi</th>
                                <th>Yorum Üst ID</th>
                                <th>Kullanıcı ID</th>
                                <th>Makale ID</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.YorumlarID</td>
                                    <td>@item.Yorum</td>
                                    <td>@item.YorumTarihi</td>
                                    <td>@item.YorumUstId</td>
                                    <td>@item.KullanicilarID</td>
                                    <td>@item.Makaleler_MakalelerID</td>
                                    <td>
                                        <a href='~/AdminPanel/AdminYorum/AdminYorumGuncelle/@item.YorumlarID' class='btn btn-sm btn-warning'><i class='fas fa-pencil-alt'></i></a>
                                    </td>
                                    <td>
                                        <a href='~/AdminPanel/AdminYorum/AdminYorumSil/@item.YorumlarID' class='btn btn-sm btn-danger'><i class='fas fa-pencil-alt'></i></a>
                                    </td>
                                </tr>
                            }
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

