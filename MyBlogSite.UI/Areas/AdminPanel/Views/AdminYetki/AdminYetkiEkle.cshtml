@model MyBlogSite.UI.Areas.AdminPanel.Controllers.AnasayfaViewToplu

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">YETKİ EKLE</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="yetkiEkleForm" action="~/AdminPanel/AdminYetki/AdminYetkiEkle" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Yetki Adı</label>
                                <input type="text" name="yetkiAdi" class="form-control" id="" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Erişim Açıklaması</label>
                                <input type="text" name="aciklama" class="form-control" id="" placeholder="">
                            </div>
                        </div>

                        <div class="card card-info card-outline">
                            <div class="card-header">
                                <h5 class="card-title">Erişim Alanları</h5>
                            </div>
                            <div class="card-body">
                                @foreach (var item in Model.SayfaList)
                                {
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckbox_@item.ErisimAlanlariID" name="selectedSayfalar" value="@item.ErisimAlanlariID">
                                        <label for="customCheckbox_@item.ErisimAlanlariID" class="custom-control-label">@item.ControllerAdi</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">YETKİ EKLE</button>
                        </div>
                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

