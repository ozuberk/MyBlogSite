@model MyBlogSite.UI.Areas.AdminPanel.Controllers.AnasayfaViewToplu

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">YETKİ EKLE</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="yetkiEkleForm" action="~/AdminPanel/AdminYetki/AdminYetkiEkle" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Yetki Adı</label>
                                <input type="text" name="yetkiAdi" class="form-control" id="" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Erişim Açıklaması</label>
                                <input type="text" name="aciklama" class="form-control" id="" placeholder="">
                            </div>
                        </div>


                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success" href="~/AdminPanel/AdminYetki/AdminSayfaEkle">YETKİ EKLE</button>
                        </div>
                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

