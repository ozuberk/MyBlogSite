@using MyBlogSite.DLL.Tablolar

@model List<Kullanicilar>

@section addTopLibrary{

    <link rel="stylesheet" href="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.css">

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminKullanici/AdminKullaniciIndex">Kullanici Listesi</a></li>
                    <li class="breadcrumb-item active">Kullanici Ekle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">KULLANICI EKLE</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="kullaniciEkleForm" action="~/AdminPanel/AdminKullanici/AdminKullaniciEkle" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" name="adi" class="form-control" id="" placeholder="Ad">
                            </div>
                            <div class="form-group">
                                <label>Soyadı</label>
                                <input type="text" name="soyadi" class="form-control" id="" placeholder="Soyad">
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input type="text" name="kullaniciAdi" class="form-control" id="" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Şifresi</label>
                                <input type="text" name="kullaniciSifresi" class="form-control" id="" placeholder="Şifre">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="email" class="form-control" id="" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>Twitter Kullanıcı Adı</label>
                                <input type="text" name="twitter" class="form-control" id="" placeholder="Nick Name">
                            </div>
                            <div class="form-group">
                                <label>Github Kullanıcı Adı</label>
                                <input type="text" name="github" class="form-control" id="" placeholder="Nick Name">
                            </div>
                            <div class="form-group">
                                <label>Linkedln Kullanıcı Adı</label>
                                <input type="text" name="linkedln" class="form-control" id="" placeholder="Nick Name">
                            </div>
                            <div class="form-group">
                                <label>Meslek</label>
                                <input type="text" name="meslek" class="form-control" id="" placeholder="Meslek">
                            </div>
                            <div class="form-group">
                                <label>Yaşadığınız Ülke</label>
                                <input type="text" name="ulke" class="form-control" id="" placeholder="Ülke">
                            </div>
                            <div class="form-group">
                                <label>Yaşadığınız Şehir</label>
                                <input type="text" name="sehir" class="form-control" id="" placeholder="Şehir">
                            </div>
                            <div class="form-group">
                                <label>Hakkında</label>
                                <input type="text" name="hakkinda" class="form-control" id="" placeholder="Hakkında">
                            </div>

                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">KULLANICI EKLE</button>
                        </div>
                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary{
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>$(function () {

            $('#kullaniciEkleForm').validate({
                rules: {
                    adi: {
                        required: true
                    },
                    soyadi: {
                        required: true
                    },
                    kullaniciAdi: {
                        required: true
                    },
                    kullaniciSifresi: {
                        required: true
                    },
                    email: {
                        required: true
                    },
                    twitter: {
                        required: true
                    },
                    github: {
                        required: true
                    },
                    linkedln: {
                        required: true
                    },
                    meslek: {
                        required: true
                    },
                    ulke: {
                        required: true
                    },
                    sehir: {
                        required: true
                    },
                    hakkinda: {
                        required: true
                    }
                },
                messages: {
                    adi: {
                        required: "Alan Zorunludur"
                    },
                    soyadi: {
                        required: "Alan Zorunludur"
                    },
                    kullaniciAdi: {
                        required: "Alan Zorunludur"
                    },
                    kullaniciSifresi: {
                        required: "Alan Zorunludur"
                    },
                    email: {
                        required: "Alan Zorunludur"
                    },
                    twitter: {
                        required: "Alan Zorunludur"
                    },
                    github: {
                        required: "Alan Zorunludur"
                    },
                    linkedln: {
                        required: "Alan Zorunludur"
                    },
                    meslek: {
                        required: "Alan Zorunludur"
                    },
                    ulke: {
                        required: "Alan Zorunludur"
                    },
                    sehir: {
                        required: "Alan Zorunludur"
                    },
                    hakkinda: {
                        required: "Alan Zorunludur"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });</script>
}
